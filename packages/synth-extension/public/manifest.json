{
  "manifest_version": 3,
  "name": "Synth Exporter",
  "version": "1.0.0",
  "description": "Stitch-capture #synth-container and export label_* annotations.",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": ["http://localhost:4000/*", "<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "Synth Export" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
